{
    "$jsonSchema": {
        "bsonType": "object",
        "required": ["titre", "dateCreation", "statut"],
        "properties": {
            "titre": {
                "bsonType": "string",
                "description": "Titre court de la tâche"
            },
            "description": {
                "bsonType": "string",
                "description": "Détail de la tâche"
            },
            "dateCreation": {
                "bsonType": "date",
                "description": "Date de création de la tâche"
            },
            "echeance": {
                "bsonType": "date",
                "description": "Date limite de la tâche"
            },
            "statut": {
                "bsonType": "string",
                "enum": ["à faire", "en cours", "terminée", "annulée"],
                "description": "Statut de la tâche"
            },
            "priorite": {
                "bsonType": "string",
                "enum": ["basse", "moyenne", "haute", "critique"],
                "description": "Priorité de la tâche"
            },
            "auteur": {
                "bsonType": "object",
                "properties": {
                    "nom": { "bsonType": "string" },
                    "prénom": { "bsonType": "string" },
                    "email": { "bsonType": "string" }
                }
            },
            "categorie": {
                "bsonType": "string",
                "description": "Type de tâche (perso, travail, projet, etc.)"
            },
            "etiquettes": {
                "bsonType": "array",
                "items": { "bsonType": "string" }
            },
            "sousTaches": {
                "bsonType": "array",
                "items": {
                    "bsonType": "object",
                    "properties": {
                        "titre": { "bsonType": "string" },
                        "statut": { "bsonType": "string", "enum": ["à faire", "en cours", "terminée", "annulée"] },
                        "echeance": { "bsonType": "date" }
                    }
                }
            },
            "commentaires": {
                "bsonType": "array",
                "items": {
                    "bsonType": "object",
                    "properties": {
                        "auteur": { 
                            "bsonType": "object",
                            "properties": {
                                "nom": { "bsonType": "string" },
                                "prénom": { "bsonType": "string" },
                                "email": { "bsonType": "string" }
                            }
                        },
                        "date": { "bsonType": "date" },
                        "contenu": { "bsonType": "string" }
                    }
                }
            },
            "historiqueModifications": {
                "bsonType": "array",
                "items": {
                    "bsonType": "object",
                    "properties": {
                        "champModifie": { "bsonType": "string" },
                        "ancienneValeur": { },
                        "nouvelleValeur": { },
                        "date": { "bsonType": "date" }
                    }
                }
            }
        }
    }
}